<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bsu.promevideo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.NFC" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TimerActivity"
            android:label="@string/title_activity_timer"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".VideoActivity"
            android:label="@string/title_activity_video" >
        </activity>
        <activity
            android:name=".NFCTestActivity"
            android:label="@string/title_activity_nfctest" >
        </activity>
        <activity
            android:name=".NFCWriteActivity"
            android:label="@string/title_activity_nfcwrite" >
        </activity>
        <activity
            android:name=".Timer2Activity"
            android:label="@string/title_activity_timer2" >
        </activity>
        <activity
            android:name="com.bsu.promevideo.ndef.NdefTestActivity"
            android:label="@string/title_activity_ndef_test" >
        </activity>
    </application>

</manifest>